@model App.Models.Material
@using App.Menu
@using App.ExtendMethods

@inject SideBarService _sidebarService

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div>
    <h4>Chi tiết vật liệu</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IngredientPrice)
        </dt>
        <dd class = "col-sm-10">
            @Model.IngredientPrice.ToPriceUnit()
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.brands)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.brands.BrandName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.cateIngredients)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cateIngredients.CategoryName)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@Model?.Id">Cập nhật</a> |
    <a class="btn btn-primary btn-sm" asp-action="Index">Trở lại</a>
</div>


@{
    _sidebarService.setActive("Ingredient", "Ingredient", "Index");
}

@section SideBar{
    @Html.Raw(_sidebarService.RenderHtml())
}