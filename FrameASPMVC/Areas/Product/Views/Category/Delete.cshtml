@model App.Models.Product.Category

@{
    ViewData["Title"] = "Xóa danh mục";
}

<h3>Bạn chắc chắn muốn xóa danh mục này?</h3>
<hr>
<div>
    <h4>Kiểm tra lại thông tin danh mục trước khi xóa</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Slug)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Slug)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ParentCategory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ParentCategory.Slug)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input class="btn btn-danger btn-sm" type="submit" value="Xóa" class="btn btn-danger" /> |
        <a class="btn btn-primary btn-sm" asp-action="Index">Quay lại</a>
    </form>
</div>
