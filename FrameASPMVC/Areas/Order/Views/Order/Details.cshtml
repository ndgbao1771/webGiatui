@model App.Models.Orders.Order
@using App.ExtendMethods
@using App.Menu


@inject SideBarService _sidebarService

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateSend)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateSend)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VolumeOrderClothes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VolumeOrderClothes)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HomeAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HomeAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StateOrder)
        </dt>
        <dd class = "col-sm-10">
           @Html.Raw(Model.StateOrder.StateToVNs())
        </dd>
    </dl>
</div>
<div>
    @if(Model.StateOrder == App.Models.Orders.State.Confirm)
    {
        <a class="btn btn-success btn-sm" asp-action="Finish" asp-route-id="@Model.Id">Hoàn thành</a>
    }
    else if (Model.StateOrder == App.Models.Orders.State.Process)
    {
        <a class="btn btn-primary btn-sm" asp-action="Order" asp-route-id="@Model.Id">Duyệt đơn</a>
    }
    
    <a class="btn btn-primary btn-sm" asp-action="Index">Trở lại</a>
</div>


@{
    _sidebarService.setActive("Order", "Order", "Index");
}

@section SideBar{
    @Html.Raw(_sidebarService.RenderHtml())
}