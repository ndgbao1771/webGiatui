    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
        <div class="container">
            <div class="section-title">
                <span>Phản hồi</span>
                <h2>Phản hồi</h2>
                <p>Hãy cho chúng tôi biết suy nghĩ của bạn khi trải nghiệm dịch vụ của chúng tôi</p>
            </div>

            <div class="row">
                @await Component.InvokeAsync("infoShopContact")

                <div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-stretch">
                    <form asp-area="Contact" asp-controller="Contact" asp-action="SendContact" method="post" role="form" class="php-email-form">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label asp-for="FullName" class="control-label"></label>
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6 mt-3 mt-md-0">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="Phone" class="control-label"></label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="Message" class="control-label"></label>
                            <textarea asp-for="Message" class="form-control" name="message" rows="10" required></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                        <div class="my-3">
                            <div class="loading">Loading</div>
                            <div class="error-message"></div>
                            <div class="sent-message">Your message has been sent. Thank you!</div>
                        </div>
                        <div class="text-center">
                            <input type="submit" value="Gửi phản hồi" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- End Contact Section -->
    

</main>
