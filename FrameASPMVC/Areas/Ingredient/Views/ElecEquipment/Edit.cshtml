@model App.Models.ElectricalEquipment
@using App.Menu
@using App.ExtendMethods

@inject SideBarService _sidebarService

@{
    ViewData["Title"] = "Cập nhật";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="EquipmentName" class="control-label"></label>
                <input asp-for="EquipmentName" class="form-control" />
                <span asp-validation-for="EquipmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WashingVolume" class="control-label"></label>
                <input asp-for="WashingVolume" class="form-control" />
                <span asp-validation-for="WashingVolume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryElecEquipID" class="control-label"></label>
                <select asp-for="CategoryElecEquipID" class="form-control" asp-items="ViewBag.CategoryElecEquipID"></select>
                <span asp-validation-for="CategoryElecEquipID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-success btn-sm" type="submit" value="Cập nhật" /> | 
                <a class="btn btn-primary btn-sm" asp-action="Index">Trở lại</a>
            </div>
        </form>
    </div>
</div>

@{
    _sidebarService.setActive("Ingredient", "ElecEquipment", "Index");
}

@section SideBar{
    @Html.Raw(_sidebarService.RenderHtml())
}
