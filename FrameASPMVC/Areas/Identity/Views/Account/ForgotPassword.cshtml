@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Lấy lại mật khẩu?";
    Layout = "_LoginLayout";
}

<!-- Outer Row -->
<div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-2 d-none d-lg-block"></div>
                            <div class="col-lg-8">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-2">Quên mật khẩu</h1>
                                        <p class="mb-4">Chúng tôi sẽ hỗ trợ bạn, vui lòng nhập thông tin email liên quan đến mật khẩu của bạn. Đội ngũ hỗ trợ sẽ phản hồi nhanh nhất có thể!</p>
                                    </div>
                                    <form class="user" method="post">
                                        @* <div asp-validation-summary="All" class="text-danger"></div> *@
                                        <div class="form-group">
                                            <input asp-for="Email" class="form-control form-control-user" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        
                                        <button type="submit" class="btn btn-primary btn-user btn-block">Gửi</button>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" asp-action="Register">Đăng kí</a>
                                    </div>              
                                    <div class="text-center">
                                        <a class="small" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">Đã có tài khoản? Đăng nhập</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-2 d-none d-lg-block"></div>
                        </div>
                    </div>
                </div>

            </div>

        </div>      



@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
